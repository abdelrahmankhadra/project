<div class="container">
  <h1>
    <strong>Product</strong>
  </h1>

  <div class="container description" align="center">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6">
        <%= image_tag(@product.image_url, class: "img-details") %>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <p class="nameP">
          <strong>Name:</strong>
          <%= @product.name %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>

        <p>
          <strong>Color:</strong>
          <%= @product.colour %>
        </p>

        <p>
          <strong>price:</strong>
          <%= @product.price %>
        </p>

        <%= button_to 'Order Now', orders_path(product_id: @product.id, total: @product.price), class: "btn btn-primary" %>

        <p>Average Rating:
          <small>(<%= @product.comments.count%>
            reviews)</small>
          <div class="rated" data-score="<%= @product.average_rating %>"></div>
        </p>

        <%= form_with(url: '/payments/create') do |form| %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>
      <hr>

      <%= link_to 'Edit', edit_product_path(@product) %>
      |
      <%= link_to 'Back', products_path %>
    </div>
  </div>
  <%= render 'new_comment' %>

  <%= render 'comments' %>

  <div class="pagination">
    <%= will_paginate @comments %>
  </div>

  <!-- end about -->
</div>
<!-- end container -->
</div>
